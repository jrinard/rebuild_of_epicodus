<% content_for(:title, "Section") %>

<h1>Lesson: <%= @section.name %> </h1>

<% if @section.lessons.any? %>
  <h4>Here are the lessons for this section:</h4>

  <ul>
    <% @section.lessons.each do |lesson| %>
      <li>
        <%= link_to lesson.title, section_lesson_path(@section) %> |
        <%= link_to "Edit", edit_section_lesson_path(@section, lesson) %> |
        <%= link_to "Delete", section_lesson_path(@section, lesson), :data => {:confirm => "Are you sure?",:method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no lessons yet!</p>
<% end %>
<hr>
<%= link_to "Chapters", chapters_path %> |
<%= link_to "Delete Section", section_path(@section),:data => {:confirm => "Are you sure?",:method => "delete"} %> |
<%= link_to "New Lesson", new_section_lesson_path(@section) %>
